<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-2 pt-2 text-white min-vh-100">
                <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-2 d-none d-sm-inline">Menu</span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link align-middle px-0">
                            <i class="fa-solid fa-apple-whole fs-3"></i>
                            <span class="ms-1 d-none d-sm-inline fs-3">Productos</span>
                        </a>
                    </li>                       
                    <li>
                        <a href="/categoria" class="nav-link px-0 align-middle">
                            <i class="fa-solid fa-list fs-3"></i> <span class="ms-1 d-none d-sm-inline fs-3">Categoria</span> 
                        </a>
                    </li>
                </ul>                    
            </div>
        </div>
        <div class="col py-3">
            <div class="row">
                <div class="col col-md-4">
                    <div class="card bg-dark">
                        <div class="card-header  text-center">
                            <div class="card-title text-info fs-3">Agregar Categoria</div>
                        </div>
                        <div class="card-body ">
                            <form action="/categoria/create" method="post">
            
                                <div class="row">
                                    <div class="col">
                                        <Label for="Nombre" class="form-label text-white"> Ingrese Nombre </Label>
                                        <input type="text" class="form-control" placeholder="Nombre" name="Nombre" id="Nombre">
                                    </div>                        
                                </div>
            
                                <div class="row">
                                    <div class="col">
                                        <Label for="Estado" class="form-label text-white"> Ingrese Estado </Label>
                                        <select name="Estado" class="form-select form-select-sm" id="Estado">
                                            <option value="Activo">Activo</option>
                                            <option value="Inactivo">Inactivo</option>
                                        </select>
                                    </div>
                                </div>
            
                                <div class="mt-3">
                                    <button class="btn btn-outline-danger mx-auto d-block"  type="submit">Agregar Categoria</button>
                                </div>
            
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col col-md-8">
                    <table class="table table-striped table-dark table-hover w-100">
                        <thead>
                          <tr>                
                            <th scope="col">Nombre</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Opciones</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% mostrarCategoria.forEach(element => { %>
                                <tr>            
                                    <td><%-element.Nombre  %></td>
                                    <% if (element.estado === 'Activo') { %>
                                        <td  class="text-success" ><%-element.estado %></td> 
                                    <% } else { %>
                                        <td  class="text-danger" ><%-element.estado %></td>
                                    <% } %>                        
                                    <td>
                                        <a class="btn btn-sm btn-outline-info btnEditar" data-Editar="<%-element.IdCategoria %>" >Editar</a>
                                        <a href="#"  class="btn btn-sm btn-outline-danger btnElimiCategoria" data-Id="<%-element.IdCategoria %>"  >Eliminar</a>
                                    </td>                
                                  </tr>           
                            <% }) %>                
                        </tbody>
                      </table>
                </div>
            </div>            
        </div>
    </div>
</div>    

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Editar Categoria</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/categoria/update" method="post">
                <div class="row">
                    <div class="col">
                        <input type="hidden" class="form-control" name="IdActualizar" id="IdActualizar" >
                        <Label for="Nombre" class="form-label text-white"> Ingrese Nombre </Label>
                        <input type="text" class="form-control" placeholder="Nombre" name="Nombre" id="NombreModal">
                    </div>                        
                </div>

                <div class="row">
                    <div class="col">
                        <Label for="Estado" class="form-label text-white"> Ingrese Estado </Label>
                        <select name="Estado" class="form-select form-select-sm" id="EstadoModal">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3">
                    <button class="btn btn-outline-danger mx-auto d-block"  type="submit">Editar Categoria</button>
                </div>
            </form>
        </div>        
      </div>
    </div>
  </div>

  <div class="modal fade" id="EliminarModalCategoria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Eliminar</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Â¿Desea eliminar la categoria?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>          
          <a id="ModalEliminar"   class="btn btn-danger" type="button" >Eliminar</a>   
        </div>
      </div>
    </div>
  </div>
