<table  id="tablas"  class="table table-striped  table-hover w-100">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Imagen</th>
      <th scope="col">Precio</th>
      <th scope="col">stock</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Marca</th>
      <th scope="col">Categoria</th>
      <th scope="col">Subtotal</th>
      <th scope="col">Estado</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% mostrarproducto.forEach(item=> { %>
    <tr>
      <th><%-item.Nombre %></th>
      <td class="text-center">
        <img
          src="img/<%- item.imagen %>"
          class="img-fluid rounded imgData"
          style="width: 120px !important; height: 100px !important; object-fit: cover"
          alt="img"
        />
      </td>
      <td><%-item.precio %></td>
      <% if (item.stock> 0) { %>
      <td class="text-success"><%-item.stock %></td>
      <% } else { %>
      <td class="text-danger"><%-item.stock %></td>
      <% } %>
      <td><%-item.cantidad %></td>
      <% if (item.Descripcion) { %>
      <td><%-item.Descripcion %></td>
      <% } else { %>
      <td class="text-danger">no hay descripcion</td>
      <% } %> <% if (item.marca) { %>
      <td><%-item.marca %></td>
      <% } else { %>
      <td class="text-danger">no hay marca</td>
      <% } %> <% if (item.categoria) { %>
      <td><%-item.categoria.Nombre %></td>
      <% } else { %>
      <td class="text-danger">no hay categoria</td>
      <% } %>

      <td><%-item.subtotal %></td>

      <% if (item.estado==='Activo' ) { %>
      <td class="text-success"><%-item.estado %></td>
      <% } else { %>
      <td class="text-danger"><%-item.estado %></td>
      <% } %>
      <td>
        <a
          href="#"
          data-id="<%-item.IdProducto %>"
          class="btn btn-sm btn-outline-info ProductoEditar" 
          >Editar</a
        >
        <a
          href="#"
          data-Elim="<%-item.IdProducto %>"
          class="btn btn-sm btn-outline-danger ProductoEliminar"
          >Eliminar</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
