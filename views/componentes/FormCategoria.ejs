<div class="card">
  <div class="card-header bg-success text-center">
    <div class="card-title text-white fs-3">Agregar Categoria</div>
  </div>
  <div class="card-body">
    <form action="/categoria/create" method="post">
      <div class="row">
        <div class="col">
          <Label for="Nombre" class="form-label text-white">
            Ingrese Nombre
          </Label>
          <input
            type="text"
            class="form-control"
            placeholder="Nombre"
            name="Nombre"
            id="Nombre"
          />
        </div>
      </div>

      <div class="row">
        <div class="col">
          <Label for="Estado" class="form-label text-white">
            Ingrese Estado
          </Label>
          <select name="Estado" class="form-select form-select-sm" id="Estado">
            <option value="Activo">Activo</option>
            <option value="Inactivo">Inactivo</option>
          </select>
        </div>
      </div>

      <div class="mt-3">
        <button class="btn btn-outline-success w-100 mx-auto d-block" type="submit">
          Agregar Categoria
        </button>
      </div>
    </form>
  </div>
</div>
