<div
  class="modal fade"
  id="UpdateModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div
    class="modal-dialog modal-dialog-centered"
    style="max-width: 700px !important"
  >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar Producto</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          action="/productos/update/producto"
          method="post"
          enctype="multipart/form-data"
        >
          <input type="hidden" id="IdEdit" name="Id" />
          <div class="row mb-2">
            <div class="col">
              <input
                type="text"
                class="form-control"
                placeholder="Ingrese Nombre"
                name="Nombre"
                id="NombreEdit"
              />
            </div>
            <div class="col">
              <input
                type="text"
                class="form-control"
                placeholder="Ingrese Marca"
                name="Marca"
                id="MarcaEdit"
              />
            </div>
          </div>

          <div class="row mb-2">
            <div class="col">
              <input
                type="text"
                class="form-control"
                placeholder="Ingrese Precio"
                name="precio"
                id="precioEdit"
              />
            </div>
            <div class="col">
              <input
                type="number"
                class="form-control"
                name="stock"
                placeholder="Ingrese stock"
                id="stockEdit"
              />
            </div>
          </div>

          <div class="row mb-2">
            <div class="col">
              <input
                type="number"
                class="form-control"
                name="Cantidad"
                placeholder="Ingrese Cantidad"
                id="CantidadEdit"
              />
            </div>
          </div>

          <div class="row mb-2">
            <div
              class="col col-md-10 d-flex align-items-start flex-column justify-content-center"
            >
              <Label for="imagen" class="form-label text-white">
                Ingrese Imagen
              </Label>
              <input
                type="file"
                class="form-control"
                name="imagen"
                id="imagen"
              />
            </div>
            <div class="col col-md-2 p-3">
              <div class="text-center">
                <img
                  class="img-fluid rounded imgdataEdit"
                  style="
                    width: 120px !important;
                    height: 100px !important;
                    object-fit: cover;
                  "
                  alt="img"
                />
              </div>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col">
              <textarea
                name="Descripcion"
                class="form-control"
                placeholder="Ingrese DescripciÃ³n"
                id="DescripcionEdit"
              ></textarea>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <Label for="Categoria" class="form-label d-block">
                Ingrese Categoria</Label
              >
              <div class="d-flex align-items-center gap-3">
                <select
                  name="Categoria"
                  class="form-select d-inline"
                  id="CategoriaEdit"
                >
                  <% if (mostrarCategoria.length> 0) { %> <%
                  mostrarCategoria.forEach(element=> { %>
                  <option value="<%- element.IdCategoria %>">
                    <%- element.Nombre %>
                  </option>
                  <% }) %> <% } else { %>
                  <option value="">Ingrese Categoria</option>
                  <% } %>
                </select>
                <button  type="button" class="btn btn-outline-success btnOpenCategoria">+</button>
              </div>
            </div>

            <div class="col">
              <Label for="Estado" class="form-label"> Ingrese Estado </Label>
              <select name="Estado" class="form-select" id="EstadoEdit">
                <option value="Activo">Activo</option>
                <option value="Inactivo">Inactivo</option>
              </select>
            </div>
          </div>

          <div class="mt-3">
            <button
              class="btn btn-outline-success mx-auto w-100 d-block"
              type="submit"
            >
            <i class="fa-regular fa-pen-to-square"></i>   Editar Producto
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
