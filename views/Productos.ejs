<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-2 pt-2 text-white min-vh-100">
                <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-2 d-none d-sm-inline">Menu</span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link align-middle px-0">
                            <i class="fa-solid fa-apple-whole fs-3"></i>
                            <span class="ms-1 d-none d-sm-inline fs-3">Productos</span>
                        </a>
                    </li>
                    <li>
                        <a href="/categoria" class="nav-link px-0 align-middle">
                            <i class="fa-solid fa-list fs-3"></i> <span
                                class="ms-1 d-none d-sm-inline fs-3">Categoria</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col py-3">
            <div class="d-flex mb-3">
                <div class="col col-md-12">
                    <div class="card bg-dark">
                        <div class="card-header">
                            <div class="card-title text-info fs-4">Agregar Producto</div>
                        </div>
                        <div class="card-body ">
                            <form action="/create" method="post" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col">
                                        <Label for="Nombre" class="form-label text-white"> Ingrese Nombre </Label>
                                        <input type="text" class="form-control" placeholder="Nombre" name="Nombre"
                                            id="Nombre">
                                    </div>
                                    <div class="col">
                                        <Label for="Marca" class="form-label text-white"> Ingrese Marca </Label>
                                        <input type="text" class="form-control" placeholder="Marca" name="Marca"
                                            id="Marca">
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col">
                                        <Label for="precio" class="form-label text-white"> Ingrese Precio </Label>
                                        <input type="text" class="form-control" placeholder="precio" name="precio"
                                            id="precio">
                                    </div>
                                    <div class="col">
                                        <Label for="stock" class="form-label text-white"> Ingrese stock </Label>
                                        <input type="number" class="form-control" name="stock" placeholder="stock"
                                            id="stock">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <Label for="stock" class="form-label text-white"> Ingrese Cantidad </Label>
                                        <input type="number" class="form-control" name="Cantidad" placeholder="Cantidad"
                                            id="Cantidad">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <Label for="imagen" class="form-label text-white"> Ingrese Imagen </Label>
                                        <input type="file" class="form-control" name="imagen" id="imagen">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <Label for="Descripcion" class="form-label text-white"> Ingrese Descripción
                                        </Label>
                                        <textarea name="Descripcion" class="form-control" placeholder="Descripcion"
                                            id="Descripcion" cols="20" rows="4"></textarea>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col">
                                        <Label for="Categoria" class="form-label text-white"> Ingrese Categoria</Label>
                                        <select name="Categoria" class="form-select" id="Categoria">
                                            <% if (mostrarCategoria.length> 0) { %>
                                                <% mostrarCategoria.forEach(element=> { %>
                                                    <option value="<%- element.IdCategoria %>"><%- element.Nombre %>
                                                    </option>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <option value="">Ingrese Categoria</option>
                                                            <% } %>

                                        </select>
                                    </div>

                                    <div class="col">
                                        <Label for="Estado" class="form-label text-white"> Ingrese Estado </Label>
                                        <select name="Estado" class="form-select" id="Estado">
                                            <option value="Activo">Activo</option>
                                            <option value="Inactivo">Inactivo</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-outline-danger mx-auto d-block" type="submit">Agregar
                                        Producto</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col col-md-12">
                    <table class="table table-striped table-dark table-hover w-100">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Imagen</th>
                                <th scope="col">Precio</th>
                                <th scope="col">stock</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Marca</th>
                                <th scope="col">Categoria</th>
                                <th scope="col">Subtotal</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% mostrarproducto.forEach(item=> { %>
                                <tr>
                                    <th><%-item.Nombre %></th>
                                    <td class=" text-center" style="width: 120px; object-fit: cover;">
                                        <img src="img/<%- item.imagen %>" class="img-fluid rounded imgdata" alt="img">
                                    </td>
                                    <td>
                                        <%-item.precio %>
                                    </td>
                                    <% if (item.stock> 0) { %>
                                        <td class="text-success">
                                            <%-item.stock %>
                                        </td>
                                        <% } else { %>
                                            <td class="text-danger">
                                                <%-item.stock %>
                                            </td>
                                            <% } %>
                                                <td>
                                                    <%-item.cantidad %>
                                                </td>
                                                <% if (item.Descripcion) { %>
                                                    <td>
                                                        <%-item.Descripcion %>
                                                    </td>
                                                    <% } else { %>
                                                        <td class="text-danger">
                                                            no hay descripcion
                                                        </td>
                                                        <% } %>

                                                            <% if (item.marca) { %>
                                                                <td>
                                                                    <%-item.marca %>
                                                                </td>
                                                                <% } else { %>
                                                                    <td class="text-danger">
                                                                        no hay marca
                                                                    </td>
                                                                    <% } %>



                                                                        <% if (item.categoria) { %>
                                                                            <td>
                                                                                <%-item.categoria.Nombre %>
                                                                            </td>
                                                                            <% } else { %>
                                                                                <td class="text-danger">
                                                                                    no hay categoria
                                                                                </td>
                                                                                <% } %>

                                                                                    <td>
                                                                                        <%-item.subtotal %>
                                                                                    </td>

                                                                                    <% if (item.estado==='Activo' ) { %>
                                                                                        <td class="text-success">
                                                                                            <%-item.estado %>
                                                                                        </td>
                                                                                        <% } else { %>
                                                                                            <td class="text-danger">
                                                                                                <%-item.estado %>
                                                                                            </td>
                                                                                            <% } %>
                                                                                                <td>
                                                                                                    <a href="/update/<%-item.IdProducto %>"
                                                                                                        class="btn btn-sm btn-outline-info">Editar</a>
                                                                                                    <a href="#"
                                                                                                        data-Elim="<%-item.IdProducto %>"
                                                                                                        class="btn btn-sm btn-outline-danger ProductoEliminar">Eliminar</a>
                                                                                                </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






<div class="modal fade" id="EliminarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Desea eliminar el producto?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <a id="ModalEliminar" class="btn btn-danger" type="button">Eliminar</a>
            </div>
        </div>
    </div>
</div>






<script>
    $('.imgdata').on('click', (e) => {
        const data = window.open(e.target.getAttribute('src'), '_target')
        setTimeout(() => {
            data.close()
        }, 2000)
    })
</script>