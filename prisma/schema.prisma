// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Producto {
  IdProducto  Int          @id @default(autoincrement())
  Nombre      String
  imagen      String?
  precio      Float         @default(0.00)      
  stock       Int
  cantidad    Int
  Descripcion String?
  marca       String?
  estado      producto_estado
  categoriaId Int?
  subtotal    Float?      @default(0.00)      
  categoria Categoria? @relation(fields: [categoriaId], references: [IdCategoria], onUpdate: SetNull, onDelete: SetNull)
  fechaCreacion DateTime        @default(now())
}



model Categoria {
  IdCategoria  Int          @id @default(autoincrement())
  Nombre      String
  estado      producto_estado
  Producto    Producto[]
  fechaCreacion DateTime        @default(now())
}




enum producto_estado {
  Activo
  Inactivo 
}
